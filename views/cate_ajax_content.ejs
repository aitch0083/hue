<% if(_.isArray(cate_articles) && cate_articles.length) { %>
	<% for(var idx = 0 ; idx < cate_articles.length ; idx++ ) { %>
		<div class="column column-block">
			<div class="card">
				<a href="/articles/read/<%= cate_articles[idx].id; %>.html">
					<img class="thumbnail" src="<%- cate_articles[idx].thumbnail %>" />
					<div class="card-section">
						<a class="side-bar-news-cate" href="/categories/index/<%= cate_articles[idx].Category.get('id') %>">
							<%= cate_articles[idx].Category.get('title'); %>
						</a>
						<a href="/articles/read/<%= cate_articles[idx].id; %>.html">
							<%- cate_articles[idx].plain_title; %>
						</a>
					</div>
				</a>
			</div>
		</div>
	<% } %>
<% } %> 

<% if( show_page_anchor ) { %>
	<span class="page-indicator hidden" data-src="/categories/index/<%= category.get('ID') %>/<%= page %>"></span>
<% } %>